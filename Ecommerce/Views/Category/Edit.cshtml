@model Category
<h2>Edit Category</h2>
<form method="post">
    <div class="border p-3 ">
        <div class="form-group ">
            <label for="name">Category Name:</label>
            <input asp-for="Name" type="text" id="name" name="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="displayOrder">Display Order:</label>
            <input asp-for="DisplayOrder" type="number" id="displayOrder" name="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row mt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:300px">Update</button>
            </div>

            <div class="col-6">
                <a class="btn btn-info" asp-controller="Category" asp-action="Index" style="width:300px">Go back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
